*
	-webkit-font-smoothing  antialiased
	-moz-osx-font-smoothing grayscale
ul
	margin  0
	padding 0
	li
		margin     0
		padding    0
		list-style none
a
	font-weight 700
	&:hover,
	&:focus,
	&:active
		text-decoration none
h1
	margin 0
	font-size 1em
	font-weight 700
h2
	font-size 1em
	font-weight 400
p 
	font-size .9em
	line-height 1.2
	padding 20px 0
	
body, html
	font-family 'Open Sans', sans-serif
	font-size 16px
	margin 0
	padding 0
section
	position relative
.ui-loader
	height 0
	overflow hidden
strong
	font-weight 700
