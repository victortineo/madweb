// Navbar
.navbar
	border-radius 0
	border 0
	margin 0 auto
	padding 0 15px
	transition(.2s all ease-in)
	background-color alpha($customwhite1,90%)
	@media mqtablet-md
		top 0
		padding 0 15px
		background-color alpha($customwhite1,90%)
	.branding
		text-align center
		display block
		padding 10px 0
	.glyphicon
		color $customgreen1
	&.navbar-shrink
		background-color white
	.menu
		ul
			float right
			margin 0
			padding 0
			list-style none
			display block
			@extend .inline-block
			@media mqtablet-md
				float none
			li
				@extend .inline-block
				padding-right 10px
				&:last-child
					padding-right 0
				a
					font-weight 700
					text-decoration none
					text-transform uppercase
					padding 20px 5px
					@media mqtablet-md
						padding 0 5px
		&__list
			text-align center
			li
				a 
					font-size 13.5px
					letter-spacing 1px
					color $customblack2
					transition .2s color linear
					-webkit-transition .2s color linear
					@media mqtablet-md
						color $customgreen1
					&:hover
						color $customgreen1
					&:active
						font-weight 700
		&__icons
			li
				padding 24px 5px
				a
					span[class^="icon-"], span[class*=" icon-"]
						font-size 20px
						color corIconSocial
						transition 1s all linear
						-webkit-transition 1s all linear
						&:hover
							color roxo
		@media mqtablet-md
			width 100%
			max-height 0
			overflow hidden
			-webkit-transition 1s all linear
			transition .5s all linear
			transition-delay .5s
			.separetor
				display block
				border 1px solid gray
				&:after
					padding 0
					font-size 0
					content ''
			.col-xs-12
				width 100%
			ul
				display block
				text-align center
				max-height 0
				overflow hidden
				-webkit-transition 1s all linear
				transition 1s all linear
				li
					display block
					padding 5px 5px
					margin 18px 0
					a
						font-size 16px
			.menu__icons
				padding-bottom 5px
				li
					display inline-block
			&.active
				max-height 100vh
				ul
					max-height 100vh
	.menu-collapse
		font-size 0
		padding 0
		cursor pointer
	@media mqtablet-md
		.menu-collapse
			font-size 24px
			padding 10px 0
// Carousel
.carousel
	margin-top 64px
	.carousel-inner
		.item
			min-height 100vh
			background-image url('../../assets/img/slider1.jpg')
			background-size cover
			background-position center
			background-repeat no-repeat
			padding 0 15px
			.carousel-caption
				width 100%
				left 0
				right 0
				bottom 15%
				h1,p,a
					text-shadow none
				h1
					font-size 66.02px
					font-weight 900
				p
					font-size 41.42px
					font-weight 400
				a
					max-width 300px
					width 100%
					display inline-block
					color branco
					font-size 19.45px
					font-weight 900
					text-decoration none
					padding 10px 0
					background-color cor5
					border-radius(60px)
				.arrow-down
					margin-top 120px
					@media mqtablet
						margin-top 60px
					span.glyphicon-menu-down
						display block
						font-size 26px
						font-weight 100
						margin-bottom -10px
						opacity 1
				@media mqtablet
					bottom 35%
					h1
						font-size 32px
						font-weight 900
					p
						font-size 18px
						font-weight 400
				@media mqmobile
					h1
						font-size 32px
					p 
						font-size 32px
	.carousel-indicators
		li
			width 8px
			height 8px
			background-color $customblack2
			border 2px solid $customblack2
			&.active
				width 10px
				height 10px
				background-color $customgreen1
// about
.section-n1
	padding 70px 15px
	background-color $customwhite1
	background-image url('../../assets/img/bg-section-n1.jpg')
	color $customblack2
	&__about
		max-width 550px
		margin 0 auto
		text-align center
		font-size 16px
		.page-header
			font-size 35px
			text-align center
			padding 0
			border 0
			margin 0
		h1
			margin 0
			font-size 1em
			font-weight 700
		h2
			font-size 1em
			font-weight 400
		p 
			font-size .9em
			line-height 1.2
			padding 20px 0
		a
			font-weight 700
			padding 5px 40px
// NEWSLETTER
.section-n2
	background-image url('../../assets/img/bg-section-n2.jpg')
	background-attachment fixed
	padding 70px 15px
	&-newsletter
		position relative
		.page-header
			border 0
			padding 0
			margin 0
			@media mqtablet
				text-align center
				margin-bottom 15px
		h1
			margin 0
			font-weight 100
		@media mqtablet
			.input-group
				text-align center
				margin-bottom 15px
		.content
			display block
// CASES
.section-n3
	background-color $customwhite1
	padding 70px 15px
	&__cases
		h1
			text-transform uppercase
	&__cases-content
		background-color $customwhite1
		.nav-tabs
			border 0
			padding 0
			margin 0 auto
			li
				position relative
				text-align center
				overflow auto
				background-color $customwhite1
				border 1px solid $customgray1
				&.active
					.arrow-up
						opacity 1
					span
						color $white
						margin 5px
						background-color $customblue
				&:hover a
					span
						color $white
			a
				font-size 14px
				font-weight 700
				color $customblue
				text-transform uppercase
				background-color transparent
				border 0
				transition(.2s all ease-in)
				&:visited,
				&:active,
				&:link
					background-color transparent
				@media mqmobile-md
					font-size 10px
				span
					display inline-block
					font-size 38px
					margin 15px 0
					border-radius 50%
					padding 25px
					border 5px solid transparent
					transition(.2s all ease-in)
					@media mqmobile-md
						font-size 30px
						border-radius 50%
						padding 10px
						border 5px solid transparent
		.tab-content
			padding-bottom 20px
			font-size 15px
			color $gray2
			&__icons
				text-align center
				margin-top 50px
				color $black
				font-size 32px
				@media mqmobile-md
					font-size 38px
			.page-header
				margin-top 30px
				.title
					font-size 16px
					font-weight 600
					color $gray2
					text-align left
					text-transform uppercase
					@media mqmobile-md
						text-align center
						margin-bottom 15px
			p
				text-align justify
