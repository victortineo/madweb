// Navbar
.navbar
	border-radius 0
	border 0
	margin 0 auto
	padding 40px 15px 0 15px
	transition(.2s all ease-in)
	background-color transparent
	@media mqtablet-md
		top 0
		padding 0 15px
		background-color $white
	.branding
		text-align center
		display block
		padding 10px 0
	.logo-full
		font-size 5em
		color $white
		@media mqtablet-md
			font-size 0
	.logo-min
		font-size 0
		@media mqtablet-md
			font-size 2em
	.glyphicon
		color $customdarkblue
	&.navbar-shrink
		padding-top 0
		background-color white
		.branding
			padding 20px 0
			@media mqtablet-md
				padding 10px 0
		.logo-full
			font-size 0
		.logo-min
			font-size 2em
		.menu
			a
				color $customdarkblue
				&:hover
					padding-bottom 10px
	.menu
		ul
			margin 0
			padding 0
			list-style none
			display block
			@extend .inline-block
			li
				@extend .inline-block
				&:first-child
					padding-left 0
				&:last-child
					padding-right 0
				a
					font-weight 400
					text-decoration none
					text-transform uppercase
		&__list
			text-align center
			li
				padding 25px 10px
				a 
					font-size 13.07px
					letter-spacing 1px
					color $white
					transition .2s color linear
					-webkit-transition .2s color linear
					@media mqtablet-md
						color $customdarkblue
					&:hover
						padding-bottom 20px
						border-bottom 1px solid $customblue 
						color $customblue 
					&:active
						font-weight 700
		&__icons
			li
				padding 24px 5px
				a
					span[class^="icon-"], span[class*=" icon-"]
						font-size 20px
						color corIconSocial
						transition 1s all linear
						-webkit-transition 1s all linear
						&:hover
							color roxo
		@media mqtablet-md
			width 100%
			max-height 0
			overflow hidden
			-webkit-transition 1s all linear
			transition .5s all linear
			transition-delay .5s
			.separetor
				display block
				border 1px solid gray
				&:after
					padding 0
					font-size 0
					content ''
			.col-xs-12
				width 100%
			ul
				display block
				text-align center
				max-height 0
				overflow hidden
				-webkit-transition 1s all linear
				transition 1s all linear
				li
					display block
					padding 5px 5px
					margin 18px 0
					a
						font-size 16px
			.menu__icons
				padding-bottom 5px
				li
					display inline-block
			&.active
				max-height 100vh
				ul
					max-height 100vh
	.menu-collapse
		font-size 0
		padding 0 0
		cursor pointer
	@media mqtablet-md
		.menu-collapse
			font-size 24px
			padding 10px 0
	&.bastard-pages
