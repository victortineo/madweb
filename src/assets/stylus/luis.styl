// NEW COLUMNS 15
.col-xs-15,
.col-sm-15,
.col-md-15,
.col-lg-15
	position relative,
	min-height 1px
	padding-left 10px
	padding-right 10px

.col-xs-15
	float left
	width 20%

.col-sm-15
	@media screen and (min-width: 768px)
		float left
		width 20%

.col-md-15
	@media screen and (min-width: 992px)
		float left
		width 20%

.col-lg-15
	@media screen and (min-width: 1200px)
		float left
		width 20%

/*DEFAULT*/
img
	max-width 100%

.no-gutter
	margin-left 0
	margin-right 0
	padding-left 0
	padding-right 0

.not-home
	padding-top 0

.section-page-wrap
	background-color #fff
	color #8e8e8e
	padding-top 70px
	padding-bottom 85px
	position relative
	z-index 1
	.page-header
		margin-bottom 85px
		text-transform uppercase

.section-zigzag
	padding-top 0

.page-header.text-blue
	color $cor01

.text-blue
	color $cor01

.text-left
	text-align left

.text-right
	text-align right
	
.postit-fix-contact
	z-index 9999
	
.title > span 
	font-weight 300
	
.header-top-fixed
	color white
	height 550px
	padding-top 0
	position fixed
	top 0
	z-index 0
	width 100%
	
.underline-blue
	border-bottom 2px solid #101c34
	
.nav-tabs>li.active>a,
.nav-tabs>li.active>a:focus,
.nav-tabs>li.active>a:hover,
.nav-tabs>li>a:hover
.nav>li>a:focus,
.nav>li>a:hover
	background-color transparent !important
	border-color transparent !important
	
/*LISTA COM ICONES HEADER */
.list-icons-onheader
	font-size 15px
	text-align justify
	figure
		margin 0 auto
		width 70px 
	h3
		font-size 15px
		font-weight bold
		margin 30px 0
		text-align center

/*NOSSA CULTURA*/
.nossa-cultura-top
	background-image url(../img/nossa-cultura/bg.jpg)
	.page-header
		margin 230px 0 70px
		text-align left
		@media screen and (max-device-width: 680px) and (orientation: landscape)
			margin 12% 0 0
		@media screen and (max-width: 480px)
			margin 35% 0 8%
		.title
			text-align left
			
/*NOSSO DNA*/
.section-nosso-dna
	background-image url(../img/nossa-cultura/bg-nosso-dna-teste1.png)
	background-position right center
	background-repeat no-repeat
	background-size cover
	padding-bottom 61px
	@media screen and (max-width: 780px)
		background-image none

/*SEÇÃO DE ZIGZAG*/
.section-zigzag
	color #fff
	padding-bottom 0
	text-align justify
	.zigzag-left
		padding 0 75px 25px
		.page-header
			text-align right
			.title
				text-align right
		@media screen and (max-width: 480px)
			padding 0 15px 25px	
	.zigzag-right
		padding 0 75px 25px
		.page-header
			text-align left
			.title
				text-align left
		@media screen and (max-width: 480px)
			padding 0 15px 25px	
	.nosso-ambiente
		background-color #fe974a
	.nossa-filosofia
		background-color #415278
	.page-header
		margin 70px 0 40px

// AJUSTE DE ALTURA DA IMAGEM PARA 1200px
.img-nosso-ambiente
	min-height: auto;
	// min-height: 491px;
	@media screen and (min-width: 1200px)
		min-height 503px

/*SEÇÃO NOSSOS VALORES*/
.section-nossos-valores
	background-color #f0f0f0
	background-image url(../img/nossa-cultura/bg-nossos-valores.jpg)
	background-position top right
	background-repeat no-repeat

/*SEÇÃO COMO ENTREGAMOS*/
.section-como-entregamos
	background-image url(../img/nossa-cultura/bg-como-entregamos.jpg)
	background-repeat no-repeat
	background-size  cover
	background-position center center
	color #fff
	padding-bottom 80px
	overflow hidden
	@media screen and (min-width: 980px)
		padding-bottom 180px
	.como-entregamos-circle
		text-align center
	.como-entregamos-cols
		text-align center
		figure
			margin 30px 0
	.png-icon-meeting1 p,
	.png-icon-meeting2 p
		margin 0 auto
		float: none
	.como-entregamos-col-esquerda
		@media screen and (min-width: 1200px)
			text-align right
			p,
			figure
				float right
			figure
				margin 0
			p
				line-height 18px
				margin-right 30px
				width 270px
			.png-icons
				position absolute
			.png-icon-calendar
				top -60px
				right -140px
			.png-icon-thumbdown
				top 70px
				right -20px
			.png-icon-cart
				top 190px
				right 20px
			.png-icon-check
				top 320px
				right -20px
			.png-icon-meeting2
				top 450px
				right -140px
	.como-entregamos-col-direita
		@media screen and (min-width: 1200px)
			text-align left
			p,
			figure
				float left
			figure
				margin 0
			p
				line-height 18px
				margin-left 30px
				width 270px
			.png-icons
				position absolute
				display none
			.png-icon-lamp
				display block
				top -60px
				left -140px
			.png-icon-control
				display block
				top 70px
				left 0px
			.png-icon-highfive
				display block
				top 190px
				left 20px
			.png-icon-people
				display block
				top 320px
				left 0px
			.png-icon-meeting1
				display block
				top 450px
				left -140px

/*SEÇÃO FALE CONOSCO*/
.section-contact-team
	background url(../img/background-n92.jpg)
	background-size cover
	color #fff
	.page-header
		margin-bottom 50px
		.title
			color #fff
	.contact-team-text
		margin-bottom 50px
	.contact-team-form
		input
			border 0 none
			color #222
			display block
			margin-bottom 15px
